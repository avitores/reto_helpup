<%= form_for(album) do |f| %>
  <%= devise_bootstrap_error_messages! %>

  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :publico %>
    <%= f.check_box :public %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit  t('.update', :default => "Actualizar"), class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
