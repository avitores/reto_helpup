<h1>Modificando Álbum '<%= @album.name %>'</h1>
<div class="row">
  <div class="col-xs-12 col-md-6 push-md-3">
    <div class="panel panel-default panel-boundary">
      <div class="panel-heading">
        <h2>Editando Álbum</h2>
      </div>
      <div class="panel-body">
        <%= render 'form', album: @album %>

        <%= link_to "Ver '#{@album.name}'", @album, class:'btn btn-lg btn-info' %>
        <%= link_to 'Volver', albums_path, class:'btn btn-lg btn-secondary' %>

      </div>
    </div>
  </div>
</div>
