<h1>Editing Photo</h1>

<div class="row">
  <div class="col-xs-12 col-md-6 push-md-3">
    <div class="panel panel-default panel-boundary">
      <div class="panel-heading">
        <h2>Creando Foto</h2>
      </div>
      <div class="panel-body">
            
        <%= render 'form', photo: @photo %>

      </div>
      <%= link_to 'Ver', @photo, class:'btn btn-lg btn-info' %>
      <%= link_to 'Volver al album', Album.find(@photo.album_id), class:'btn btn-lg btn-secondary' %>
    </div>
  </div>
</div>

