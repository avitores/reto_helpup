<div class="row">
  <div class="col-sm-12 text-xs-center bootstrap-welcome">
    <h1><%= t('welcome', :default => "Bienvenido") %> <%= current_user.name %> <%= current_user.surname %> </h1>

    <div class="row">
        <div class="card" style="width:350px">
          <%= image_tag current_user.avatar_url, :height => 150, class: "card-img-top img-responsive", alt: current_user.name if current_user.avatar? %>
          <div class="card-body">
            <h4 class="card-title"><%= current_user.name %> <%= current_user.surname %></h4>
            <p class="card-text"><%= current_user.email %></p>
            <%= link_to 'Editar perfil', edit_user_registration_path(current_user), class: "btn btn-lg btn-primary" %>

            <%= link_to 'Álbumes', albums_path, class:'btn btn-lg btn-info' %>

            <%= link_to 'Desconectar', eval("destroy_#{current_user.type.downcase}_session_path"), method: :delete, class: "btn btn-lg btn-warning float-right" %>
          </div>
        </div>
    </div>
  </div>
</div>
