<div class="row">
  <div class="col-xs-12 col-md-6 push-md-3">
    <div class="panel panel-default panel-boundary">
      <div class="panel-heading">
        <h2>Editar usuario</h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: "form" }) do |f| %>
            <%= devise_bootstrap_error_messages! %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :nombre %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :apellido %>
              <%= f.text_field :surname, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :avatar %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :avatar_cache %>
              <% if current_user.avatar? %>
                <%= image_tag current_user.avatar.small_thumb.url %>
              <% end %>    
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :contraseña %> <i><small class="text-muted">(Dejar en blanco si no desea cambiar la contraseña)</small></i>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <% if @minimum_password_length %>
                    <small class="form-text text-muted">(<%= @minimum_password_length %> caracteres mínimo)</small>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :confirmar_contraseña %>
              <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :contraseña_actual %> <i><small class="text-muted">(Es necesaria la contraseña actual para confirmar los cambios)</small></i>
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>

            <%= f.submit  t('.update', :default => "Actualizar"), class: "btn btn-lg btn-primary" %>
            <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete, class: "btn btn-lg btn-danger float-right" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
