<div class="row">
  <div class="col-xs-12 col-md-6 push-md-3">
    <div class="panel panel-default panel-boundary">
      <div class="panel-heading">
        <h2><%= t('.sign_up', :default => 'Registrarse') %></h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form" }) do |f| %>
            <%= devise_bootstrap_error_messages! %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :nombre %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :apellido %>
              <%= f.text_field :surname, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :avatar %>
              <%= f.file_field :avatar %>
            </div>

            <div class="form-group">
              <%= f.label :contraseña %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <% if @minimum_password_length %>
                  <small class="form-text text-muted">(<%= @minimum_password_length %> caracteres mínimo)</small>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.label :confirmar_contraseña %>
              <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
            </div>
            <%= f.submit  t('.sign_up', :default => "Registrarse"), class: "btn btn-lg btn-primary" %>
        <%end%>
      </div>
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
